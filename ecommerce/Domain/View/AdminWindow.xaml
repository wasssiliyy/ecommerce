<Window x:Class="ecommerce.Domain.View.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ecommerce.Domain.View"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800"  Background="Black" ResizeMode="NoResize">
    <Grid>
        <Canvas>
            <Button Command="{Binding ProductsButton}" Canvas.Top="170" Canvas.Left="100" Width="200" Height="100" Content="Products" FontSize="30">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>

            </Button>

            <Button Command="{Binding OrdersButton}" Canvas.Top="170" Canvas.Right="100" Width="200" Height="100" Content="Orders" FontSize="30">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>

            </Button>
        </Canvas>
    </Grid>
</Window>
